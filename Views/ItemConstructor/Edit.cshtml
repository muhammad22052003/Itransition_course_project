                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <h5>@Model.Item.Collection.CustomText1_name</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <textarea value="@Model.Item.CustomText1" name="CustomText1" class="constructor-text-area form-control"></textarea>
