    @{
        if (Model.Item.Collection.CustomBool3_state)
        {
            <section>
                <div class="constructor-panel">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <h5>@Model.Item.Collection.CustomBool3_name</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-center">
                                <button id="btn3-yes" type="button" onclick="btn_customBool3_yes()" class="btn-style-header-smaller btn-constructor-yesNo-color">
                                    <img class="true-false-icon" src="https://drive.google.com/thumbnail?id=1-Ta_PZSXoBbyp5DCWAWUicee7dtDbMlf">
                                </button>
                            </div>
                            <div class="col d-flex justify-content-center">
