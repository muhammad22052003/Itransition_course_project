                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input value="@Model.Item.CustomInt3?.ToString()" type="number" name="CustomInt3" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
    }
    @{
        if (Model.Item.Collection.CustomBool1_state)
        {
            <section>
                <div class="constructor-panel">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <h5>@Model.Item.Collection.CustomBool1_name</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-center">
                                <button id="btn1-yes" type="button" onclick="btn_customBool1_yes()" class="btn-style-header-smaller btn-constructor-yesNo-color">
                                    <img class="true-false-icon" src="https://drive.google.com/thumbnail?id=1-Ta_PZSXoBbyp5DCWAWUicee7dtDbMlf">
                                </button>
                            </div>
                            <div class="col d-flex justify-content-center">
                                <button id="btn1-no" type="button" onclick="btn_customBool1_no()" class="btn-style-header-smaller btn-constructor-yesNo-color">
                                    <img class="true-false-icon" src="https://drive.google.com/thumbnail?id=10MgyAydHhSJ6Y-0RY4OOc5ej7sNw_QpL">
                                </button>
                            </div>
                            <input value="@Model.Item.CustomBool1?.ToString().ToLower()" type="hidden" id="customBool1" name="CustomBool1" />
