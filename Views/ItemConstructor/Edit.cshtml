@using CourseProject_backend.Models.ViewModels
@model ItemEditViewModel
@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Item edit constructor";
    ViewData.Add("Lang", Model.LanguagePack.Key);
}

<div class="container">
    <div class="row">
        <div class="col text-center d-flex justify-content-center">
            <h1 class="d-flex text-center">@Model.LanguagePack.Value["item_constructor"]</h1>
        </div>
    </div>
</div>

<form action="~/itemconstructor/edit/@Model.LanguagePack.Key" id="form-data" method="post">
    <input type="hidden" name="CollectionId" value="@Model.Item.Collection.Id" />
    <input type="hidden" name="Id" value="@Model.Item.Id" />
    <section>
        <div class="constructor-panel">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <h5>@Model.LanguagePack.Value["item_name"]</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <input value="@Model.Item.Name" type="text" name="Name" class="form-control">
                    </div>
                </div>
            </div>
        </div>
    </section>

    @{
        if (Model.Item.Collection.CustomString1_state)
        {
            <section>
                <div class="constructor-panel">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <h5>@Model.Item.Collection.CustomString1_name</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input value="@Model.Item.CustomString1" name="CustomString1" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
    }
    @{
        if (Model.Item.Collection.CustomString2_state)
