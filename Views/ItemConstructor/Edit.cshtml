    <section>
        <div class="constructor-panel">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <h5>@Model.LanguagePack.Value["tags_word"]</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @{
                            var tags = Model.Item.Tags.Select((tag) => tag.Name).ToArray();

                            string tagsText = string.Empty;

                            for (int i = 0; i < tags.Length; i++)
                            {
                                tagsText += tags[i];

                                if(i != tags.Length - 1)
                                {
                                    tagsText += ' ';
                                }
                            }
                        }
                        <input value="@tagsText" type="text" name="Tags" class="form-control">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="constructor-panel">
            <div class="container">
                <div class="row">
                    <div class="col d-flex justify-content-center text-center">
                        <button id="submit-btn-itemCtor" onclick="createItem()" class="btn-style-header-smaller btn-main-header-color">
                            <h5 class="p-2">@Model.LanguagePack.Value["submit_word"]</h5>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
<script src="~/js/itemConstructor.js"></script>
