@using CourseProject_backend.Controllers
@model RegistrationModel
@{
    Layout = "_MyLoginLayout";
    ViewData["Title"] = "Login";
    ViewData.Add("Lang", Model.LanguagePack.Key);

}
<!-------------------------------------------------------------->
<main class="max-display-height">
    <form action="~/login/index/@Model.LanguagePack.Key" method="post">
    <div class="container justify-content-centerd">
        <div class="row d-flex justify-content-center align-items-center max-display-height">
            <div class="col-12 registration-form d-flex justify-content-center align-items-center">
                <div class="container">
                    <div class="row d-flex justify-content-center registration-header mb-4">
                        <img src="~/img/logo_light.png" style="width: 180px;">
                    </div>
                    <div class="row d-flex justify-content-center registration-body mb-4">
                        <label class="input-label">Email</label>

                            @{
                                if (Model.Errors.ContainsKey("Email"))
                                {
                                    <label class="text-danger danger-label">* @Model.Errors["Email"]</label>
                                }
                            }
                        
                        <input name="Email" type="email" class="form-control input-field">
                    </div>
                    <div class="row d-flex justify-content-center registration-body mb-4">
                        <label class="input-label">Password</label>

                            @{
                                if (Model.Errors.ContainsKey("Password"))
                                {
                                    <label class="text-danger danger-label">* @Model.Errors["Password"]</label>
                                }
                            }

                         <input name="Password" type="password" class="form-control input-field">
                    </div>
                        <div class="row d-flex justify-content-center registration-body">
                            <button type="submit" class="sumbit-button">
                                <h5 class="btn-login-submit align-items-center d-flex justify-content-center">@Model.LanguagePack.Value["login_word"]</h5>
                            </button>
                        </div>
                    <div class="row d-flex justify-content-center registration-body mb-2">
                        @Model.LanguagePack.Value["or_with_word"]
                    </div>
                    <a>
                        <div class="row d-flex justify-content-center registration-body mb-2">
                                <a href="@Model.GoogleAuthUri">
                                    <h5 class="btn-login-secondLevel align-items-center d-flex justify-content-center">Google</h5>
                                </a>
                        </div>
                    </a>
                        <div class="align-items-center d-flex justify-content-center">
                            <a href="@(Url.Action("index","registration", new {lang = Model.LanguagePack.Key}))">
                                @Model.LanguagePack.Value["account_exist"]
                            </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>
</main>
