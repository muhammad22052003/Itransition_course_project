@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
@model KeyValuePair<int,IDictionary<string, string>>

<div class="container registration-grid">
    <div class="row">
        <div class="col-12 registration-panel">
            <div class="container text-white">
                <div class="row">
                    <div class="col-12">
                        <h1>@Model.Value["login_word"]</h1>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="email_field" class="form-label">Email</label>
                            <input type="email"
                                   class="form-control"
                                   name=""
                                   id="email_field"
                                   placeholder="" />
                        </div>
                        <label for="password_field" id="email_errorMessage" class="form-label text-danger"></label>

                        <div class="mb-3">
                            <label for="password_field" class="form-label">Password</label>
                            <input type="password"
                                   class="form-control"
                                   name=""
                                   id="password_field"
                                   placeholder="" />
                            <label for="password_field" id="password_errorMessage" class="form-label text-danger"></label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <button onclick="login()" class="button btn-style-large btn-submit-color">@Model.Value["submit_word"]</button>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <a href="@(Url.Action("index","registration", new {lang = Model.Key}))">
                                <button class="button btn-style-medium btn-redirect-login">@Model.Value["registration_word"]</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/authorization.js"></script>            